 <section class="content-header">
      <h1>
       New Template
        <small><%= @app_name %></small>
      </h1>
      <ol class="breadcrumb">
        <li><%= link_to admin_path do %><i class="fa fa-dashboard"></i>Dashboard<% end %></li>
        <li><%= link_to templates_path do %>Templates</li><% end %>
        <li class="active">New Template</li>
      </ol>
    </section>

<div class="col-lg-12 col-xs-12">
<%= form_for(@template ) do |f| %>
  <% if @template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@template.errors.count, "error") %> prohibited this template from being saved:</h2>

      <ul>
      <% @template.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <i id="layoutSaveText">Last Saved: Never </i>
    <div class="actions">
    <%= f.submit "Create Template", class: 'btn btn-success' %><br><br/>
  </div>
    <%= f.text_area :content, class: 'code-area', rows: 40   %>
  </div>
  



  
<% end %>

</div>
