<%= form_for(@template, :remote => true ) do |f| %>
  <% if @template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@template.errors.count, "error") %> prohibited this template from being saved:</h2>

      <ul>
      <% @template.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <i id="layoutSaveText">Last Saved: <%= @template.updated_at %></i>
    <div class="actions">
    <%= f.submit "Save Template", class: 'btn btn-success' %><br><br/>
  </div>
    <%= f.text_area :content, class: 'code-area', rows: 40   %>
  </div>
  



  
<% end %>


<script>

