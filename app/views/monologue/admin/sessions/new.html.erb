
<div class="login-box">
  <% flash.each do |type, message| %>
  <div class="alert alert-danger fade in">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%= message %>
  </div>
<% end %>
  <div class="login-logo">
    <a href="/"><b>Thumbtack</b></a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Please login in to start your session.</p>

    <%= form_tag admin_sessions_path do %>
      <div class="form-group has-feedback">
        <%= text_field_tag :email, params[:email], class: 'form-control', placeholder:'Email' %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      
      
      <div class="form-group has-feedback">
         <%= password_field_tag(:password, "", placeholder: "Password", class:'form-control') %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
         
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <%= submit_tag "Sign In", class: "btn btn-primary btn-block btn-flat" %>
        </div>
        <!-- /.col -->
      </div>
<% end %>
    

    <a href="mailto:webmaster@thestickynote.com">I forgot my password!</a><br>

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

