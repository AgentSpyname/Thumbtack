<% if monologue_current_user.role == "admin" or monologue_current_user.role == "cm" or monologue_current_user == user %>
<%= user.error_messages %>
<%= user.text_field :name, label:  t(".name"), class:  "span6 form-control" %>
<%= user.text_field :email, label:  t(".email"), class:  "span6 form-control" %>
<%= user.text_field :contact_email, label: 'Contact Email', class: "span6 form-control" %>
<%= user.text_area :bio, label: 'Bio', class: "span6 form-control" %>
<%= user.text_field :slug, label: 'Username', class: 'span6 form-control' %>
<%= user.select :role, [['Administrator','admin'],['Writer ','writer'], ['Content Manager','cm'], ['Marketer','marketing'], ['Staff -No Login', 'staff']], {}, class: "form-control" %>
<%= user.password_field :password, label:  t(".password"), class:  "span6 form-control" %>
<%= user.password_field :password_confirmation, label:  t(".password_confirmation"), class:  "span6 form-control" %>
<br/>
<% else %>
You do not have permission to view this.
<% end %>