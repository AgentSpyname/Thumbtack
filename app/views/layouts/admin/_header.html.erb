  <header class="main-header">
    <!-- Logo -->
    <%= link_to admin_path, class: 'logo' do %>
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>T</b></span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>Thumbtack</b></span>
    <% end %>
    
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- Messages: style can be found in dropdown.less-->
          <li class="dropdown messages-menu">
            <a id ="mailURL" href="<%= @all_settings.where(:name => "Mail URL").last.contents %>" class="dropdown-toggle">
              <i class="fa fa-envelope-o"></i>
            </a>
            
          </li>
        
          <!-- User Account: style can be found in dropdown.less -->
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag avatar_url(monologue_current_user), class:'user-image' %>
              <span class="hidden-xs"><%= monologue_current_user.name %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <%= image_tag avatar_url(monologue_current_user), class:'img-circle' %>


                <p>
                  <%= monologue_current_user.name %> - <%= monologue_current_user.pretty_role %>
                  <small>Member since <%= monologue_current_user.created_at.strftime("%m-%d-%y") %></small>
                </p>
              </li>
              <!-- Menu Body -->
   
              <!-- Menu Footer-->
              <li class="user-footer">
             
                <div class="pull-right">
                <%= link_to "Sign Out", "/admin/logout/", class:'btn btn-default btn-flat' %>
                </div>
              </li>
            </ul>
          </li>
          <!-- Control Sidebar Toggle Button -->
          <li>
            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
          </li>
        </ul>
      </div>
    </nav>
  </header>