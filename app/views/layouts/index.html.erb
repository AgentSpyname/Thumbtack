 <section class="content-header">
      <h1>
       All Layouts
        <small><%= @app_name %></small>
      </h1>
      <ol class="breadcrumb">
        <li><%= link_to admin_path do %><i class="fa fa-dashboard"></i>Dashboard<% end %></li>
        <li class="active">Layouts</li>
      </ol>
    </section>
  <div class="col-lg-12 col-xs-12">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @layouts.each do |layout| %>
      <tr>
        <td><%= layout.name %></td>
        <td><%= link_to 'Show/Edit', edit_layout_path(layout) %></td>
        <td><%= link_to 'Destroy', layout, method: :delete, data: { confirm: 'Deleting a layout that is still in use will destroy your site. Make sure the layouts are not used in any posts or pages. Are you sure? ' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Layout', new_layout_path, class: 'btn btn-success' %>
</div>