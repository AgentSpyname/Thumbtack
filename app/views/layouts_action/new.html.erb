 <section class="content-header">
      <h1>
       New Layout
        <small><%= @app_name %></small>
      </h1>
      <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i>Dashboard</li>
        <li><%= link_to layouts_path do %>Layouts<% end %></li>
        <li class="active">New</li>
      </ol>
    </section>
    
<div class="col-lg-12 col-xs-12">
<%= form_for(@layout) do |f| %>
  <% if @layout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@layout.errors.count, "error") %> prohibited this layout from being saved:</h2>

      <ul>
      <% @layout.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :custom_layout %><br>
    <%= f.text_area :custom_layout, class: 'code-area', rows: 40   %>
  </div>
 
  <div class="actions">
    <%= f.submit "Create Layout", {:class =>  'btn btn-success'} %>
  </div>
<% end %>

<%= link_to 'Back', layouts_path %>
</div>