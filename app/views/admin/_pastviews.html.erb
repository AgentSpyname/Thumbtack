<div  class="row">
<div style = "margin-left:20px; " class="col-lg-4 col-xs-12">
    <br/><b>Sort Views:</b>
<form name="filter" action="/admin/views" method="GET">
    <input class="form-control " type="text" name="startdate" value= "<%= params[:startdate] %>" />
    <input class= "form-control " type="text" name="enddate" value= "<%= params[:enddate] %>" />
    <input type="submit" value="Submit" class="btn btn-primary">
</form>
</div>
</div>


<div class="col-lg-12 col-xs-12">
<table class="table">
    <thead>
    <th>Title</th>
    <th>All Time View Count</th>
  <th>Views from <%= params[:date] %></th>
    <th>Link</th>
    </thead>
    
    <tbody>
          <% @posts.each do |post| %>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.impressions.count %></td>
            <% if params[:enddate] = nil %>
            <td><%= post.impressionist_count(:start_date => params[:startdate], :end_date => params[:enddate]) %></td>
            <% else %>
            <td><%= post.impressionist_count(:start_date => params[:startdate]) %></td>
            
        </tr>
        <% end %>
        <% end %>
        

    </tbody>
</table>
</div>
