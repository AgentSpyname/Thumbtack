<div  class="row">
<div style = "margin-left:20px; " class="col-lg-12 col-xs-12">
    <br/><b>Sort Views:</b>
<form name="filter" action="/admin/views" method="GET">
    <input class="form-control " type="text" name="startdate" placeholder= "Start Date" />
    <input class= "form-control " type="text" name="enddate" placeholder= "End Date" />
    <input type="submit" value="Submit" class="btn btn-primary">
</form>
</div>
</div>


<div class="col-lg-12 col-xs-12">
<table class="table">
    <thead>
    <th>Title</th>
    <th>All Time View Count</th>
  <th>Views from Today</th>
    <th>Link</th>
    </thead>
    
    <tbody>
          <% @posts.each do |post| %>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.impressions.count %></td>
            <td>
               <%= post.impressionist_count(:start_date=>Time.now.strftime("%Y-%m-%d")) %></td>
        </tr>
        <% end %>
        

    </tbody>
</table>
</div>
