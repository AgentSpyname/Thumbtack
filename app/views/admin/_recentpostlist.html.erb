  <!-- TO DO List -->
          <div class="box box-primary">
            <div class="box-header">
              <i class="ion ion-clipboard"></i>

              <h3 class="box-title">Recent Posts</h3>

              <div class="box-tools pull-right">
            <%= will_paginate @posts, renderer: BootstrapPagination::Rails, :class => "inline pagination pagination-sm" %><br/><br/><br/>
            </div>

            <!-- /.box-header -->
            <div class="box-body">
              <ul class="todo-list">
                  <%  @posts.each do |post| %>
                <li>
                  <!-- drag handle -->
                        <i class="fa fa-circle-o"></i>
                      
                
                  <!-- todo text -->
                  <span class="text"><%= post.title %></span>
                  <!-- Emphasis label -->
                  <small class="label label-<%= post_time_colour(post.impressionist_count) %>"><i class="fa fa-clock-o"></i><%= time_ago_in_words(post.created_at) %></small>
                  <!-- General tools such as edit or delete-->
                  <div class="tools">
                    <a href="<%= post.full_url %>" class="fa fa-circle-o"></a>
                  </div>
                </li>
                <% end %>
               
              </ul>
            </div>
            <!-- /.box-body -->
            <div class="box-footer clearfix no-border">
                <a href="/monologue/posts/new" class="btn btn-default pull-right"><i class="fa fa-plus"></i> New Post</a>
            </div>
          </div>
          <!-- /.box -->